{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "price": {
      "type": "float"
    },
    "free": {
      "type": "boolean"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "course_classes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course-class.course-class",
      "mappedBy": "course"
    },
    "instructors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::instructor.instructor",
      "mappedBy": "courses"
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "whatYouWillLearn": {
      "displayName": "learning_points",
      "type": "component",
      "repeatable": true,
      "component": "sections.learning-points",
      "max": 5,
      "required": true
    },
    "courseFeatures": {
      "displayName": "course_features",
      "type": "component",
      "repeatable": false,
      "component": "sections.course-features",
      "required": true
    },
    "previewMedia": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "featuredQuote": {
      "displayName": "featured_quote",
      "type": "component",
      "repeatable": false,
      "component": "sections.featured-quote"
    }
  }
}
