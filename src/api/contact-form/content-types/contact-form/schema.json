{
  "kind": "collectionType",
  "collectionName": "contact_forms",
  "info": {
    "singularName": "contact-form",
    "pluralName": "contact-forms",
    "displayName": "contact form"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "topic": {
      "type": "enumeration",
      "enum": [
        "General Inquiry",
        "Retreats",
        "Membership",
        "Online Courses",
        "Donation",
        "Payment",
        "Store",
        "Other"
      ]
    },
    "message": {
      "type": "text",
      "required": true
    },
    "agreedToPrivacyPolicy": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "New",
        "In Progress",
        "Responded",
        "Closed"
      ],
      "default": "New"
    },
    "adminNotes": {
      "type": "text"
    }
  }
}
