{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "blogPost"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "excerpt": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "featuredImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "category": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "readTime": {
      "type": "integer"
    },
    "isFeatured": {
      "type": "boolean"
    },
    "hiddenTag": {
      "type": "string"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "sections.seo"
    }
  }
}
